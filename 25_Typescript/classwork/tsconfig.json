{
	"compilerOptions": {
		"module": "es2015",
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"target": "es5"
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}